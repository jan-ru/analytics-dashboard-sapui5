<mvc:View
  controllerName="analytics.dashboard.controller.SapIcons"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true"
  height="100%">

  <Page
    id="iconsPage"
    title="SAP Icons Library"
    showNavButton="false">

    <subHeader>
      <Toolbar>
        <SearchField
          id="iconSearch"
          width="50%"
          placeholder="Search icons..."
          search=".onSearch" />
      </Toolbar>
    </subHeader>

    <content>
      <ScrollContainer height="100%" vertical="true">
        <VBox class="sapUiSmallMargin">

          <Title
            text="SAP Icon Explorer"
            level="H2"
            class="sapUiSmallMarginBottom" />

          <Text
            text="Browse and copy SAP UI5 icon codes"
            class="sapUiMediumMarginBottom" />

          <!-- Icons Grid -->
          <FlexBox id="iconGrid" wrap="Wrap" class="sapUiSmallMargin">
            <!-- Icons will be dynamically rendered -->
          </FlexBox>

        </VBox>
      </ScrollContainer>
    </content>

  </Page>

</mvc:View>
